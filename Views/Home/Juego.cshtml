@{
    ViewData["Title"] = "Juego";
}
<link rel="stylesheet" href="/css/site.css">
<header>
 <a href='@Url.Action("irAPagPrinc", "Home")' alt="Ir al"> Home </a>
</header>

<body>
<div class="container">
    <h4> Intentos: <div id="intentosVisual">@ViewBag.VBIntentos</div></h4>

    <h4> Palabra a adivinar:</h4>

    <h4 id="IdComoVa">@(
        ViewBag.VBComoVa != null ? string.Join("", (char[])ViewBag.VBComoVa) : ""
    )</h4>

    <h4> Letras usadas: </h4>
    <h4 id="letrasUsadas"></h4>


   
   


    <form method="POST" action='@Url.Action("IrAlJuego", "Home")'>
        <p>
            Ponga una letra
            <input id="IdLetra" name="letra" type="text" maxlength="1" />
            
        </p>
        <button type="button" onclick="Juego('@(ViewBag.PalabraElejida ?? "")')">Arriesgar letra</button>
       
    </form>

   
    <form method="POST" action='@Url.Action("IrAlJuego", "Home")'>
        <p>
            Ponga una Palabra
            <input id="IdPalabra" name="palabra" type="text" />
            
        </p>
        <button type="button" onclick="Juego('@(ViewBag.PalabraElejida ?? "")')">Arriesgar Palabra</button>
    </form>

   <div id="mensajeFinal" style="display:none;">
    <h3>Â¡El juego ha terminado!</h3>

    <form id="Fin" method="POST" action='@Url.Action("FinJuego", "Home")'>
  <input type="hidden" id="intentos"  value="@ViewBag.VBIntentos" />
    <button type="submit">FIN</button>
    </form>
   </div>
</div>

<script src="site.js"></script>
</body>